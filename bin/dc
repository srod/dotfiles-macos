#!/usr/bin/env bash

BIN_NAME=$(basename "$0")
COMMAND_NAME=$1

sub_help () {
  echo "Usage: $BIN_NAME <command>"
  echo
  echo "Commands:"
  echo "   down             Stop containers"
  echo "   help             This help message"
  echo "   logs             Show containers logs"
  echo "   pull             Update containers"
  echo "   up               Start containers"
}

sub_down () {
  docker compose stop
}

sub_logs () {
  docker compose logs -tf --tail="50"
}

sub_pull () {
  docker compose pull
}

sub_up () {
  docker compose up -d --remove-orphans
}

